<div class="jumbotron">
    <h1 align="center">Showing all the events </h1>
    <div align="center" class="events row">
    <div class="col-md-6">
        <h2>Upcoming Events</h2>
        <% @upcoming_events.each do |event| %>
            <div class="event">
                <p><%=  link_to "#{event.name}", event_path(event) %> </p>
                <p>Date: <%= event.date %></p>
                <h5>Location: <%= event.location %></h5>
            </div>
        <% end %>
        
        </div>

        <div class="col-md-6">

        <h2>Past Events</h2>
        <% @past_events.each do |event| %>
            <div class="event">
                <p>  <%=  link_to "#{event.name}", event_path(event) %> </p>
                <p>Date: <%= event.date %></p>
                <h5>Location: <%= event.location %></h5>
            </div>
        <% end %>
        </div>

    </div>
</div>