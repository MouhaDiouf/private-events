<div class="jumbotron">

    <h1 align="center"> Welcome <%= @user.username %> ! </h1>

    <div align="center" class="events row">

        <div class="col-md-4">
        <h2 align="center"> Created events </h2>

        <% @user.events.each do |event| %>
            <div class="event">
                <p><%=  link_to "#{event.name}", event_path(event) %> </p>
                <h5>Date: <%= event.date %></h5>
                <h5>Location: <%= event.location %></h5>
            </div>

        <% end %>
        </div>

            <div class="col-md-4">
                <h3>Previous events</h3>
                <% @prev_events.each do |event| %>
                    <div class="event">
                        <p><%=  link_to "#{event.name}", event_path(event) %> </p>
                        <h5>Date: <%= event.date %></h5>
                        <h5>Location: <%= event.location %></h5>
                    </div>
                <% end %>
            </div>

            <div class="col-md-4">
                <h3>Upcoming events</h3>
                <% @upcoming_events.each do |event| %>
                    <div class="event">
                        <p><%=  link_to "#{event.name}", event_path(event) %> </p>
                        <h5>Date: <%= event.date %></h5>
                        <h5>Location: <%= event.location %></h5>
                    </div>
                <% end %>
    </div>
    </div>

</div>