<h1 align="center"> Welcome <%= @user.username %> ! </h1>


<h2 align="center"> Created events </h2>

<% @user.events.each do |event| %>
    <div align="center">
        <h3><%= event.name %></h3>
        <p>
            <%= event.location %>
            <%= event.date %>
        </p>
    </div>

<% end %>

<div class="row">
    <div class="col-md-6">
        <h3>Previously attended events</h3>
        <% @prev_events.each do |event| %>
            <div align="center">
                <h3><%= event.name %></h3>
                <p>
                    <%= event.location %>
                    <%= event.date %>
                </p>
            </div>
        <% end %>
    </div>

    <div class="col-md-6">
        <h3>Upcoming events</h3>
        <% @upcoming_events.each do |event| %>
            <div align="center">
                <h3><%= event.name %></h3>
                <p>
                    <%= event.location %>
                    <%= event.date %>
                </p>
            </div>

        <% end %>
    </div>
</div>